<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Danh Sách Người Dùng</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 20px;
            background-color: #f0f2f5;
        }
        h1 {
            color: #333;
            text-align: center;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }
        th, td {
            padding: 12px;
            border: 1px solid #ccc;
            text-align: left;
        }
        th {
            background-color: #28a745;
            color: white;
        }
    </style>
</head>
<body>
    <h1>Danh Sách Người Dùng</h1>
    <table>
        <thead>
            <tr>
                <th>Tên Đăng Nhập</th>
                <th>Mật Khẩu</th>
                <th>Hành Động</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(user => { %>
                <tr>
                    <td><%= user.username %></td>
                    <td><%= user.password %></td> <!-- Hiển thị mật khẩu -->
                    <td>
                        <form action="/auth/users/edit/<%= user._id %>" method="POST" style="display:inline;">
                            <input type="text" name="username" value="<%= user.username %>" required />
                            <input type="password" name="password" placeholder="Mật khẩu mới" required />
                            <button type="submit">Sửa</button>
                        </form>
                        <form action="/auth/users/delete/<%= user._id %>" method="POST" style="display:inline;">
                            <button type="submit">Xóa</button>
                        </form>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</body>
</html>
